<!DOCTYPE html>
<html>
<head>
<title>API Client Demo</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
<script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
<script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js"></script>
</head>
<body>
    <div class="navbar">
        <div class="navbar-inner">
            <a class="brand" href="#">API Client Demo</a>
        </div>
    </div>
    <div id="main" class="container">    
        <table class="table table-striped">
            <tr><td><b>Company</b></td><td><b>Actions</b></td></tr>
            <section id="listTable"></section>             
            <!-- ko foreach: tasks -->
            <tr>
                <td><p><b data-bind="text: name"></b></p><p data-bind="text: address"></p></td>
                <td>                    
                    <button data-bind="click: $parent.beginEdit" class="btn">Edit</button>
                    <button data-bind="click: $parent.details" class="btn">Details</button>
                    <button data-bind="click: $parent.remove" class="btn">Delete</button>
                </td>
            </tr>
            <!-- /ko -->
        </table>
        <button data-bind="click: beginAdd" class="btn">Add Task</button>
    </div>
     <div id="add" class="modal hide fade" tabindex="=1" role="dialog" aria-labelledby="addDialogLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
            <h3 id="addDialogLabel">List Company</h3>
        </div>        
        <div class="modal-body">
            <form class="form-horizontal">
                <div class="control-group">
                    <label class="control-label" for="inputName">Name</label>
                    <div class="controls">
                        <input data-bind="value: name" type="text" id="company[name]" placeholder="Name" style="width: 150px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Address</label>
                    <div class="controls">
                        <input data-bind="value: address" type="text" id="company[address]" placeholder="Address" style="width: 300px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputAddress">City</label>
                    <div class="controls">
                        <input data-bind="value: city" type="text" id="company[city]" placeholder="City" style="width: 300px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Country</label>
                    <div class="controls">
                        <input data-bind="value: country" type="text" id="company[country]" placeholder="Country" style="width: 300px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Owner</label>
                    <div class="controls">
                        <input data-bind="value: owner" type="text" id="company[owner]" placeholder="Owner" style="width: 300px;">
                    </div>
                </div>      
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Email</label>
                    <div class="controls">
                        <input data-bind="value: email" type="text" id="company[email]" placeholder="Email" style="width: 300px;">
                    </div>
                </div>                 
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Phone</label>
                    <div class="controls">
                        <input data-bind="value: phone" type="text" id="company[phone]"  placeholder="Phone" style="width: 300px;">
                    </div>
                </div>                                                                             
            </form>
           
        </div>
        <div class="modal-footer">
            <button data-bind="click: addTask" class="btn btn-primary">Add Company</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        </div>
    </div>
    <div id="edit" class="modal hide fade" tabindex="=1" role="dialog" aria-labelledby="editDialogLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
            <h3 id="editDialogLabel">Edit Company</h3>
        </div>
        <div class="modal-body">
                       <form class="form-horizontal">
                <div class="control-group">
                    <label class="control-label" for="inputName">Name</label>
                    <div class="controls">
                        <input data-bind="value: name" type="text" id="company[name]" placeholder="Name" style="width: 150px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Address</label>
                    <div class="controls">
                        <input data-bind="value: address" type="text" id="company[address]" placeholder="Address" style="width: 300px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputAddress">City</label>
                    <div class="controls">
                        <input data-bind="value: city" type="text" id="company[city]" placeholder="City" style="width: 300px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Country</label>
                    <div class="controls">
                        <input data-bind="value: country" type="text" id="company[country]" placeholder="Country" style="width: 300px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Owner</label>
                    <div class="controls">
                        <input data-bind="value: owner" type="text" id="company[owner]" placeholder="Owner" style="width: 300px;">
                    </div>
                </div>      
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Email</label>
                    <div class="controls">
                        <input data-bind="value: email" type="text" id="company[email]" placeholder="Email" style="width: 300px;">
                    </div>
                </div>                 
                <div class="control-group">
                    <label class="control-label" for="inputAddress">Phone</label>
                    <div class="controls">
                        <input data-bind="value: phone" type="text" id="company[phone]"  placeholder="Phone" style="width: 300px;">
                    </div>
                </div>                                                                             
            </form>
        </div>
        <div class="modal-footer">
            <button data-bind="click:editTask" class="btn btn-primary">Update Company</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        </div>
    </div>

    <script type="text/javascript">
        function TasksViewModel() {
            var self = this;
            self.tasksURI = 'http://rocky-fjord-5148.herokuapp.com';
            self.username = "";
            self.password = "";
            self.tasks = ko.observableArray();

            self.ajax = function(uri, method, data) {
                var request = {
                    url: uri,
                    type: method,
                    contentType: "application/json",
                    accepts: "application/json",
                    cache: false,
                    dataType: 'json',
                    data: JSON.stringify(data),
                };
                return $.ajax(request);
            }

            self.listCompany = function() {
                $.getJSON( self.tasksURI+"/list", function( data ) {  
                var items = [];
                $.each( data, function( key, val ) {   
                    self.tasks.push({ 
                        id: ko.observable(val.id),
                        name: ko.observable(val.name),
                        address: ko.observable(val.address)
                    })
                });                
                })
            }

            self.beginDetails = function() {
                $('#detail').modal('show');
            }            

            self.listDetails = function(id) {
                $.getJSON( self.tasksURI+"/details/"+id, function( data ) {  
                var items = [];
                $.each( data, function( key, val ) {   
                    self.tasks.push({ 
                        name: ko.observable(val.name),
                        address: ko.observable(val.address),
                        city: ko.observable(val.city),
                        country: ko.observable(val.country),
                        owner: ko.observable(val.owner),
                        email: ko.observable(val.email),
                        phone: ko.observable(val.phone)                                                
                    })
                });                
                })
            }            

            self.updateTask = function(task, newTask) {
                var i = self.tasks.indexOf(task);
                self.tasks()[i].name(newTask.name);
                self.tasks()[i].address(newTask.address); 
                self.tasks()[i].city(newTask.city);
                self.tasks()[i].country(newTask.country);   
                self.tasks()[i].owner(newTask.owner);
                self.tasks()[i].email(newTask.email);        
                self.tasks()[i].phone(newTask.phone);                                             
            }

            self.beginAdd = function() {
                $('#add').modal('show');
            }
            self.add = function(task) {
                self.ajax(self.tasksURI+"/create", 'POST', task).done(function(data) {
                    self.tasks.push({                        
                        name: ko.observable(data.task.name),
                        address: ko.observable(data.task.address),                       
                        city:  ko.observable(data.task.city),                       
                        country:  ko.observable(data.task.country),                       
                        owner:  ko.observable(data.task.owner),
                        email:  ko.observable(data.task.email),                       
                        phone:  ko.observable(data.task.phone)                                                 
                    });
                });
            }
            self.beginEdit = function(task) {
                editTaskViewModel.setTask(task);
                $('#edit').modal('show');
            }
            self.edit = function(task, data) {
                self.ajax('http://rocky-fjord-5148.herokuapp.com/update', 'PUT', data).done(function(res) {
                    self.updateTask(task, res.task);
                });
            }
            self.remove = function(task) {
                self.ajax('http://rocky-fjord-5148.herokuapp.com/delete', 'DELETE').done(function() {
                    self.tasks.remove(task);
                });
            }
            
            self.listCompany();
        }
        function AddTaskViewModel() {
            var self = this;
            self.name = ko.observable();
            self.address = ko.observable();
            self.city = ko.observable();
            self.country = ko.observable();
            self.owner = ko.observable();       
            self.email = ko.observable();
            self.phone = ko.observable();     
 
            self.addTask = function() {
                $('#add').modal('hide');
                tasksViewModel.add({
                    name: self.name(),
                    address: self.address(),
                    city: self.city(),
                    country: self.country(),                    
                    owner: self.owner(),       
                    email: self.email(),   
                    phone: self.phone()                                    
                });
                self.name("");
                self.address("");
                self.city("");
                self.country("");
                self.owner("");       
                self.email("");  
                self.phone("");           
            }
        }
        function EditTaskViewModel() {
            var self = this;
            self.name = ko.observable();
            self.address = ko.observable();
            self.city = ko.observable();
            self.country = ko.observable();
            self.owner = ko.observable();       
            self.email = ko.observable();
            self.phone = ko.observable();            
 
            self.setTask = function(task) {
                self.task = task;
                self.name(task.name());
                self.address(task.address());         
                self.city(task.city());
                self.country(task.country());    
                self.owner(task.owner());
                self.email(task.email());   
                self.phone(task.phone());                                                          
                $('edit').modal('show');
            }
 
            self.editTask = function() {
                $('#edit').modal('hide');
                tasksViewModel.edit(self.task, {
                    name: self.name(),
                    address: self.address(),
                    city: self.city(),
                    country: self.country(),                    
                    owner: self.owner(),       
                    email: self.email(),   
                    phone: self.phone()                 
                });
            }
        }
        
        var tasksViewModel = new TasksViewModel();
        var addTaskViewModel = new AddTaskViewModel();
        var editTaskViewModel = new EditTaskViewModel();
        ko.applyBindings(tasksViewModel, $('#main')[0]);
        ko.applyBindings(addTaskViewModel, $('#add')[0]);
        ko.applyBindings(editTaskViewModel, $('#edit')[0]);
    </script>
</body>
</html>
